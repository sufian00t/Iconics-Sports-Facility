@model IEnumerable<IconicsArena.Context.Booking>

@{
    ViewBag.Title = "RemoveSlots";
}

<style>

 

    html, body {
        margin: 0; 

        height: 100%; 

        width: 100%; 

        overflow: hidden; 
    }

    

    body {
        background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');
        background-size: cover; 

        background-position: center; 
    }

    

    .background {
        display: flex;
        align-items: center; 

        justify-content: center; 

        height: 100vh; 
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.9); 

        padding: 20px; 

        border-radius: 10px; 

        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); 

        width: 100%; 

        max-width: 1200px; 

        z-index: 1; 

        position: relative; 

        overflow-y: auto; 

        max-height: 80vh; 
    }

   

    .navbar {
        position: absolute; 

        top: 0; 

        left: 0; 

        right: 0; 

        z-index: 2; 

        background-color: rgba(0, 0, 0, 0.7); 

        color: white; 

        padding: 10px; 
    }

    

    .table {
        width: 100%; 
    }
</style>


<div class="background">
    <div class="form-container">
        <h2>Bookings</h2>

       
        <div class="mb-3">

            @Html.ActionLink("Show Slots", "ShowSlots", "Slots", new { @class = "btn btn-primary" })
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>User Name</th>
                    <th>User Email</th>
                    <th>Slot Day</th>
                    <th>Slot Time</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var booking in Model)

                {
                    <tr>
                        <td>@booking.BookingId</td>
                        <td>@booking.User.Name</td>
                        <td>@booking.User.Email</td>
                        <td>@booking.Slot.Day</td>
                        <td>@booking.Slot.Time</td>
                        <td>@booking.Slot.Price</td>
                        <td>

                            @using (Html.BeginForm("RemoveSlots", "Slots", FormMethod.Post))

                            {

                                @Html.Hidden("bookingId", booking.BookingId)
                                <input type="submit" value="Remove" class="btn btn-danger" />

                            }
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

