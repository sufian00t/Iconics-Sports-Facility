@model IEnumerable<IconicsArena.Context.Slot>
@{
    ViewBag.Title = "ShowSlots";
}

<style>
    
    html, body {
        margin: 0; 
        height: 100%; 
        width: 100%; 
        overflow: hidden; 
    }

  
    body {
        background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');
        background-size: cover; 
        background-position: center; 
    }

    
    .background {
        display: flex;
        align-items: center; 
        justify-content: center; 
        height: 100vh; 
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.9); 
        padding: 20px; 
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); 
        width: 100%; 
        max-width: 1200px; 
        z-index: 1; 
        position: relative; 
        overflow-y: auto; 
        max-height: 80vh;
    }

    
    .navbar {
        position: absolute; 
        top: 0; 
        left: 0; 
        right: 0; 
        z-index: 2; 
        background-color: rgba(0, 0, 0, 0.7); 
        color: white; 
        padding: 10px;
    }

    
    .table {
        width: 100%;
    }
</style>

<div class="background">
    <div class="form-container">
        <h2>Slots</h2>

        <div class="mb-3">
            @Html.ActionLink("Add a New Slot", "AddSlot", "Slots", new { @class = "btn btn-primary" })
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Slot ID</th>
                    <th>Day</th>
                    <th>Time</th>
                    <th>Price</th>
                    <th>Is Available</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var slot in Model)
                {
                    <tr>
                        <td>@slot.SlotId</td>
                        <td>@slot.Day</td>
                        <td>@slot.Time</td>
                        <td>@slot.Price</td>
                        <td>
                            @if (slot.IsAvailable.HasValue && slot.IsAvailable.Value)
                            {
                                <span>Yes</span>
                            }
                            else
                            {
                                <span>No</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex">
                                <a href="@Url.Action("EditSlot", "Slots", new { id = slot.SlotId })" class="btn btn-warning me-1">Edit</a>
                                @using (Html.BeginForm("DeleteSlot", "Slots", FormMethod.Post))
                                {
                                    @Html.Hidden("id", slot.SlotId)
                                    <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this slot?');" />
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
