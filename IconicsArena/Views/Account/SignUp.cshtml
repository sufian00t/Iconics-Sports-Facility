@model IconicsArena.ViewModel.SignUpVM
@{
    ViewBag.Title = "SignUp";
}

<style>

    body {
        background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh; 

        margin: 0; 
    }

    .rederr {
        color: red;
        font-size: 0.875rem;
    }

    .form-container {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        padding: 30px;
        max-width: 500px;
        width: 100%;
        margin-top: 50px; 
    }

    .card-header {
        background-color: #007bff;
        border-radius: 15px 15px 0 0;
    }

    .image-container {
        max-width: 100%; 

        height: auto; 

        opacity: 0; 

        transition: opacity 1s ease; 
    }

    .image-visible {
        opacity: 1; 
    }
</style>

<script>

    document.addEventListener("DOMContentLoaded", function() {


        const imageContainer = document.querySelector('.image-container');


        setTimeout(function() {

            imageContainer.classList.add('image-visible');

        }, 1000); 

    });</script>

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="form-container">
                <div class="card">
                    <div class="card-header text-center text-white">
                        <h2 class="mb-0">Sign Up</h2>
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))

                        {
                            <div class="mb-3">

                                @Html.LabelFor(x => x.Name, new { @class = "form-label" })

                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "rederr" })
                            </div>
                            <div class="mb-3">

                                @Html.LabelFor(x => x.Email, new { @class = "form-label" })

                                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })

                                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "rederr" })
                            </div>
                            <div class="mb-3">

                                @Html.LabelFor(x => x.Password, "Password", new { @class = "form-label" })

                                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })

                                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "rederr" })
                            </div>
                            <div class="mb-3">

                                @Html.LabelFor(x => x.Password, "Confirm Password", new { @class = "form-label" })

                                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })

                                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "rederr" })
                            </div>
                            <div class="mb-3">

                                @Html.LabelFor(x => x.Address, "Billing Address", new { @class = "form-label" })

                                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })

                                @Html.ValidationMessageFor(x => x.Address, "", new { @class = "rederr" })
                            </div>
                            <div class="mb-3">

                                @Html.LabelFor(x => x.Gender, "Gender", new { @class = "form-label" })
                                <div>

                                    @Html.RadioButtonFor(x => x.Gender, "Male", new { @class = "form-check-input me-1" }) Male

                                    @Html.RadioButtonFor(x => x.Gender, "Female", new { @class = "form-check-input me-1" }) Female
                                </div>

                                @Html.ValidationMessageFor(x => x.Gender, "", new { @class = "rederr" })
                            </div>
                            <div class="d-flex justify-content-between">
                                <input id="btnSignUp" type="submit" value="Sign Up" class="btn btn-primary" />
                                <a href="@Url.Action("ClearSignUp")" class="btn btn-outline-danger">Clear</a>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <img src="@Url.Content("~/Images/assets/image.png")" class="image-container" alt="Sign Up Image" />
        </div>
    </div>
</div>

